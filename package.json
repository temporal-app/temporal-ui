{
	"name": "temporal-ui",
	"version": "0.6.3",
	"private": true,
	"description": "Monorepo for Temporal UI Design System (React, Solid bindings)",
	"author": "Temporal",
	"license": "MIT",
	"scripts": {
		"postinstall": "lefthook install",
		"build": "turbo run build",
		"clean": "turbo run clean && rimraf node_modules .turbo",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"react": "cd packages/react && bun run storybook",
		"solid": "cd packages/solid && bun run storybook",
		"lint": "turbo run lint",
		"format": "turbo run write",
		"check": "turbo run check",
		"changeset": "bunx @changesets/cli",
		"version": "bunx @changesets/cli version",
		"publish": "bun run build && bunx @changesets/cli publish"
	},
	"workspaces": [
		"packages/*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/temporal-app/temporal-ui.git"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@temporal-ui/solid": "workspace:*",
		"@types/bun": "1.3.5",
		"@types/node": "25.0.6",
		"jsdom": "27.4.0",
		"lefthook": "2.0.14",
		"rimraf": "6.1.2",
		"turbo": "2.7.4",
		"typescript": "5.9.3"
	},
	"packageManager": "bun@1.2.23",
	"trustedDependencies": [
		"@tailwindcss/oxide"
	]
}
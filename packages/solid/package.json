{
	"name": "@temporal-ui/solid",
	"version": "0.5.8",
	"description": "Solid.JS bindings for Temporal UI components",
	"license": "MIT",
	"type": "module",
	"module": "./dist/index.jsx",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"solid": "./dist/index.jsx",
			"default": "./dist/index.jsx"
		},
		"./hooks/*": {
			"types": "./dist/hooks/*/index.d.ts",
			"solid": "./dist/hooks/*/index.jsx",
			"default": "./dist/hooks/*/index.jsx"
		},
		"./*": {
			"types": "./dist/components/*/index.d.ts",
			"solid": "./dist/components/*/index.jsx",
			"default": "./dist/components/*/index.jsx"
		},
		"./styles.css": "./dist/styles.css",
		"./package.json": "./package.json"
	},
	"bugs": {
		"url": "https://github.com/temporal-app/temporal-ui/issues"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown && node ../../scripts/copy-core-styles.mjs",
		"dev": "bun run storybook",
		"lint": "biome lint ./src",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ci": "vitest run",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf dist node_modules .turbo",
		"storybook": "storybook dev -p 6007",
		"build-storybook": "storybook build",
		"prepack": "node ../../scripts/replace-protocols.mjs",
		"postpublish": "node ../../scripts/restore-protocols.mjs"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": [
		"**/*.css"
	],
	"dependencies": {
		"@ark-ui/solid": "5.27.1",
		"@tanstack/solid-table": "8.21.3",
		"@temporal-ui/core": "workspace:*"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "4.1.1",
		"@kachurun/storybook-solid-vite": "9.0.11",
		"@solidjs/testing-library": "0.8.10",
		"@storybook/addon-a11y": "9.1.13",
		"@storybook/addon-docs": "9.1.13",
		"@storybook/addon-links": "9.1.13",
		"@storybook/addon-themes": "9.1.13",
		"@storybook/addon-vitest": "9.1.13",
		"@tailwindcss/vite": "4.1.14",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/user-event": "14.6.1",
		"happy-dom": "20.0.5",
		"lucide-solid": "0.546.0",
		"storybook": "9.1.13",
		"tailwindcss": "4.1.14",
		"tsdown": "0.15.8",
		"vite": "^7.1.5",
		"vite-plugin-solid": "2.11.9",
		"vitest": "3.2.4"
	},
	"peerDependencies": {
		"solid-js": ">=1.0.0"
	}
}

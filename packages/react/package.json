{
	"name": "@temporal-ui/react",
	"version": "0.1.0",
	"description": "React bindings for Temporal UI components",
	"license": "MIT",
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.mts",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./hooks/*": {
			"types": "./dist/hooks/*/index.d.mts",
			"import": "./dist/hooks/*/index.js",
			"default": "./dist/hooks/*/index.js"
		},
		"./*": {
			"types": "./dist/components/*/index.d.mts",
			"import": "./dist/components/*/index.js",
			"default": "./dist/components/*/index.js"
		},
		"./styles.css": "./dist/styles.css",
		"./package.json": "./package.json"
	},
	"bugs": {
		"url": "https://github.com/temporal-app/temporal-ui/issues"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown && node ../../scripts/copy-core-styles.mjs",
		"dev": "bun run storybook",
		"lint": "biome lint ./src",
		"format": "biome format ./src",
		"check": "biome check ./src",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ci": "vitest run",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf dist node_modules",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": [
		"**/*.css"
	],
	"dependencies": {
		"@ark-ui/react": "5.24.1",
		"@tanstack/react-table": "8.21.3",
		"@temporal-ui/core": "workspace:*"
	},
	"devDependencies": {
		"@storybook/addon-docs": "9.1.6",
		"@storybook/addon-themes": "9.1.6",
		"@storybook/react-vite": "9.1.6",
		"@tailwindcss/vite": "4.1.13",
		"@testing-library/jest-dom": "6.8.0",
		"@testing-library/react": "16.3.0",
		"@testing-library/user-event": "14.6.1",
		"@types/react": "19.1.13",
		"@types/react-dom": "19.1.9",
		"@vitejs/plugin-react": "5.0.2",
		"happy-dom": "18.0.1",
		"lucide-react": "0.544.0",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"rimraf": "6.0.1",
		"storybook": "9.1.6",
		"tailwindcss": "4.1.13",
		"tsdown": "0.15.1",
		"typescript": "5.9.2",
		"vite": "7.1.5",
		"vitest": "3.2.4"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	}
}
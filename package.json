{
	"name": "temporal-ui",
	"version": "0.1.0",
	"private": true,
	"description": "Monorepo for Temporal UI Design System (React, Solid bindings)",
	"author": "Temporal",
	"license": "MIT",
	"scripts": {
		"postinstall": "lefthook install",
		"build": "turbo run build",
		"clean": "rimraf node_modules && turbo run clean",
		"test": "vitest run",
		"typecheck": "turbo run typecheck",
		"react": "turbo run dev -F=@temporal-ui/react...",
		"solid": "turbo run dev -F=@temporal-ui/solid...",
		"lint": "turbo run lint",
		"format": "turbo run write",
		"check": "turbo run check"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@biomejs/biome": "2.0.0",
		"@types/bun": "1.2.15",
		"@types/node": "24.0.0",
		"lefthook": "1.11.13",
		"rimraf": "6.0.1",
		"turbo": "2.5.4",
		"typescript": "5.8.3",
		"vitest": "3.2.3"
	},
	"packageManager": "bun@1.2.15"
}

{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"tsdown.config.ts",
				"!src/**/*.test.ts",
				"!src/**/*.test.tsx",
				"!src/**/*.stories.ts",
				"!src/**/*.stories.tsx"
			],
			"outputs": ["dist/**"]
		},
		"test": {
			"inputs": [
				"src/**/*.test.ts",
				"src/**/*.test.tsx"
			]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}

{
	"name": "@temporal-ui/core",
	"version": "0.1.0",
	"description": "Framework-agnostic core definitions, utils and styles for Temporal UI components",
	"license": "MIT",
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.mts",
	"exports": {
		"./*": {
			"types": "./dist/components/*/index.d.mts",
			"import": "./dist/components/*/index.js",
			"default": "./dist/components/*/index.js"
		},
		"./base": {
			"types": "./dist/components/base.d.mts",
			"import": "./dist/components/base.js",
			"default": "./dist/components/base.js"
		},
		"./utils/*": {
			"types": "./dist/utils/*/index.d.mts",
			"import": "./dist/utils/*/index.js",
			"default": "./dist/utils/*/index.js"
		},
		"./styles.css": "./dist/styles.css",
		"./package.json": "./package.json"
	},
	"bugs": {
		"url": "https://github.com/temporal-app/temporal-ui/issues"
	},
	"files": [
		"dist"
	],
	"sideEffects": [
		"**/*.css"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsdown",
		"build:watch": "tsdown --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome lint ./src",
		"format": "biome format ./src",
		"check": "biome check ./src",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf dist"
	},
	"devDependencies": {
		"rimraf": "6.0.1",
		"tsdown": "0.15.1",
		"typescript": "5.9.2",
		"vitest": "3.2.4"
	}
}
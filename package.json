{
  "name": "temporal-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for Temporal UI Design System (React, Solid bindings)",
  "author": "Temporal",
  "license": "MIT",
  "scripts": {
    "postinstall": "lefthook install",
    "build": "turbo run build",
    "clean": "rimraf node_modules && turbo run clean",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "react": "turbo run dev -F=@temporal-ui/react...",
    "solid": "turbo run dev -F=@temporal-ui/solid...",
    "lint": "turbo run lint",
    "format": "turbo run write",
    "check": "turbo run check"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/bun": "1.2.20",
    "@types/node": "24.2.1",
    "lefthook": "1.12.2",
    "rimraf": "6.0.1",
    "turbo": "2.5.5",
    "typescript": "5.9.2"
  },
  "packageManager": "bun@1.2.18",
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ]
}
